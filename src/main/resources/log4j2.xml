<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">

    <Appenders>
        <Console name="Consola" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
        <File name="Archivo" fileName="PruebaLDAP-0.0.1-SNAPSHOT.log" immediateFlush="false" append="false">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>

    <Loggers>
    	<Logger level="DEBUG" name="mx.japs.pruebas">
    		<AppenderRef ref="Consola" />
        </Logger>
        
        <Logger level="INFO" name="org.apache.directory">
    		<AppenderRef ref="Consola" />
        </Logger>
    
        <Root level="INFO">
            <AppenderRef ref="Consola" />
            <!-- AppenderRef ref="Archivo"/ -->
        </Root>
    </Loggers>
</Configuration>